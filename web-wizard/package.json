{
  "name": "web-wizard",
  "displayName": "Web Wizard", 
  "version": "0.0.1",
  "description": "A powerful web development assistant",
  "author": "Plasmo Corp. <foss@plasmo.com>",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.16.14",
    "@mui/material": "^5.15.6",
    "@plasmohq/messaging": "^0.6.0",
    "@plasmohq/storage": "1.9.0",
    "lodash": "^4.17.21",
    "plasmo": "0.89.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwindcss": "3.4.1"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/lodash": "^4.17.14", 
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "autoprefixer": "^10.4.20",
    "postcss": "8.4.33",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "https://developer.mozilla.org/*",
      "https://github.com/*"
    ],
    "permissions": [
      "storage",
      "tabs",
      "scripting",
      "activeTab",
      "notifications"
    ],
    "web_accessible_resources": [
      {
        "matches": [
          "<all_urls>"
        ],
        "resources": [
          "sidepanel.html",
          "popup.html", 
          "options.html",
          "pages/error.html"
        ]
      }
    ]
  }
}
